//文章目录默认展开
.post-toc .nav .nav-child { display: block; }
.post-toc ol {  
  font-size : 13px;     
} 

//全局布局美化代码
body {
    background-image:url(https://i.loli.net/2021/02/16/ODbMCALEm7uy5i2.png); //背景图片地址
    background-repeat: no-repeat;
    background-attachment: fixed;
    //background-position: 30% 20%;
    background-position: 30% 15%;
    background-size: cover;
}


//博客内容透明化
//文章内容的透明度设置
.content-wrap {
  opacity: 0.85;
  background-color: rgba(255, 204, 255, 0.85);
}

//侧边框的透明度设置
.sidebar {
  transition-duration: 0.4s;  
  background: rgba(255,255,153,0.8);
  opacity: 0.8;  // 透明度
  border-radius: 30px 30px 30px 30px; //边框圆角
  margin-top: 15px;
}

// 侧边头像框内部
.sidebar-inner {
  background: rgba(255,255,153,0.8);
  border-radius: 30px 30px 30px 30px; //边框圆角
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12), 0 -1px 0.5px 0 rgba(0,0,0,0.09);
  box-sizing: border-box;
  color: var(--text-color);
  width: 240px;
  opacity: 0.8;
  box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

//博客标题设置
.site-brand-container  {
  border-radius: 30px 30px 0px 0px;
  background: #FF9933
  //background: linear-gradient(200deg, #FF6600, #993300);

}
//菜单栏的透明度设置
.header-inner {
  background: rgba(153,204,255,0.8);
  margin-top: 15px;
  border-radius: 30px 30px 30px 30px; //边框圆角
  box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.75;
  border-radius: 30px 30px 30px 30px;
}

//第一篇博客样式
.post-block {
  background-color: var(--content-bg-color);
  margin-top: 20px;
  margin-left: 15px;
  margin-bottom: 24px;
  padding: 20px;
  border-radius: 30px 30px 30px 30px;
  box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

//除第一篇博客之外的博客样式
.post-block + .post-block {
  background: rgba(221, 255, 119, 0.95);
  margin-left: 15px;
  margin-top: 20px;
  margin-bottom: 24px;
  padding: 20px;
  border-radius: 30px 30px 30px 30px;
  box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

.pagination {
    border-radius: 30px 80px 30px 80px;
    box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
}

//首页顶部留白
.container{margin-top:20px;} 

// 分类&&标签 页面样式
.post-block.page {
    margin-top: 40px;
}
// 分类页面page
.category-all-page {
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.5);
    background-color: #797D7F;
    padding: 20px 30px 60px 30px;
    border-radius: 25px 25px 25px 25px;
}
.category-all-title {
    font-family: Impact;
    font-size: 24px;
    color: aqua;
}
.category-list {
    overflow: auto;
}
.category-list li {
    height: 100%;
    float: left;
    border-right: 3px solid #222;
    padding: 0 20px;
}
.category-all ul li {
    list-style: none!important;
}
.category-list li:last-child {
    border-right: none;
}
.category-list li a {
    font-size: 16px;
    text-decoration: none;
    color: chartreuse;
    font-family: Helvetica, Verdana, sans-serif;
    // text-transform: uppercase;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    -ms-transition: all 0.5s ease;
    transition: all 0.5s ease;
}
.category-list li a:hover {
    color: black;
}
.category-list li.active a {
    font-weight: bold;
    color: black;
}

